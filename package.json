{
    "name": "mermaid-class-tools",
    "displayName": "Mermaid Class Tools",
    "description": "Markdown内のMermaid記法をアシスト (リネーム / 矢印の向き反転 / 矢印の役割表示)",
    "version": "0.1.0",
    "engines": {
      "vscode": "^1.70.0"
    },
    "icon": "icon.png",
    "activationEvents": ["onLanguage:markdown"],
    "main": "extension.js",
    "contributes": {
      "languages": [
        {
          "id": "markdown",
          "extensions": [".md"]
        }
      ],
      "codeActions": [
        {
          "language": "markdown",
          "title": "Mermaid Class Tools"
        }
      ]
    }
  }
  